<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.kucingselfie.kadesubmission.model.League" />
        <import type="com.kucingselfie.kadesubmission.model.Search" />
        <import type="java.util.List" />
        <import type="com.kucingselfie.kadesubmission.common.Result" />
        <import type="androidx.lifecycle.LiveData"/>
        <variable
            name="viewmodel"
            type="com.kucingselfie.kadesubmission.ui.match.chooseleague.ChooseLeagueViewModel" />
        <variable
            name="results"
            type="LiveData&lt;Result&lt;List&lt;League>>>" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.match.chooseleague.ChooseLeagueFragment">
        <TextView
            android:id="@+id/leagueInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="@dimen/sp16"
            android:text="@string/please_choose_league"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListLeague"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/item_league"
            app:layout_constraintTop_toBottomOf="@+id/leagueInfo"
            app:spanCount="2" />

        <include
            layout="@layout/loading_state"
            app:result="@{(Result) results}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>